{
  "$schema": "https://schemas.wp.org/trunk/block.json",
  "apiVersion": 3,
  "name": "starter-theme/espn-score",
  "version": "1.0.0",
  "title": "ESPN Game Score",
  "category": "embed",
  "icon": "awards",
  "description": "Embed a Clemson game scoreboard with live scores from ESPN",
  "keywords": [
    "espn",
    "score",
    "game",
    "clemson",
    "sports",
    "football",
    "basketball"
  ],
  "textdomain": "starter-wp-theme",
  "attributes": {
    "sport": {
      "type": "string",
      "default": "football"
    },
    "season": {
      "type": "string",
      "default": ""
    },
    "gameId": {
      "type": "string",
      "default": "latest"
    },
    "title": {
      "type": "string",
      "default": ""
    },
    "nameStyle": {
      "type": "string",
      "default": "short"
    }
  },
  "supports": {
    "html": false,
    "align": [
      "wide",
      "full"
    ],
    "spacing": {
      "margin": true,
      "padding": true
    }
  },
  "editorScript": "file:./index.js",
  "editorStyle": "file:./index.css"
}